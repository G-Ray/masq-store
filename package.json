{
  "name": "masq-store",
  "version": "1.1.0",
  "description": "Data store for Masq",
  "main": "src/index.js",
  "scripts": {
    "clean": "rm dist/index.js dist/sync.js dist/store.js dist/util.js dist/permissions.js dist/crypto.js",
    "build": "./node_modules/.bin/babel ./src --experimental -d ./dist && browserify ./dist/index.js --standalone MasqStore > dist/masqstore.js && npm run clean",
    "minify": "npm run build && uglifyjs ./dist/masqstore.js -o ./dist/masqstore.min.js --compress --mangle -- ",
    "dist": "npm run minify",
    "test": "./node_modules/.bin/mocha-headless-chrome -f Testrunner.html",
    "start": "npm run dist && http-server -p 8081 dist/."
  },
  "author": {
    "name": "Andrei Sambra",
    "email": "a.sambra@qwant.com"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "browserify": "^14.5.0",
    "chai": "^4.1.2",
    "http-server": "^0.10.0",
    "mocha": "^5.0.0",
    "mocha-headless-chrome": "^1.8.2",
    "puppeteer": "^1.0.0",
    "uglify-js": "^3.1.10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/QwantResearch/masq-store.git"
  },
  "dependencies": {
    "localforage": "^1.5.5",
    "masq-crypto": "0.0.1"
  }
}
